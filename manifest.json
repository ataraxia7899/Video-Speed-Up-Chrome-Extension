{
	"manifest_version": 3,
	"name": "__MSG_extName__",
	"version": "1.0.8",
	"description": "__MSG_extDescription__",
	"default_locale": "ko",
	"permissions": [
		"storage",
		"activeTab",
		"scripting",
		"tabs"
	],
	"host_permissions": [
		"http://*/*",
		"https://*/*"
	],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"commands": {
		"toggle-speed-input": {
			"suggested_key": {
				"default": "Ctrl+Period",
				"mac": "Command+Period"
			},
			"description": "__MSG_openSpeedPopup__"
		}
	},
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": ["content.js"],
			"run_at": "document_end"
		}
	]
}
